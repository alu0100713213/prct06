module Question
 class SimpleExpec
    # Your code goes here...
        describe Question::SimpleChoice do
                before :each do
                @q = Question::SimpleChoice.new({:text => '5+2=',:rigth =>7, :distractors => [4,5,6]})
                end

        context"Cuando se contruye una pregunta" do

        end

        it "tiene que tener un texto" do
        expect(@q.text)=='5+2='
        expect(@q.right)== 7
        expect(@q.distractor)==[4,5,6]

        end
	it "tienes que tener tres componentes en la hash"do
	expect{Question::SimpleChoice.new(:text=>'2+5=?')}.to raise_error(ArgumenError)
	end
	
	context"cuando conviertas" do
		it "puede ser convertido a html"do
		expect(@q).to respond_to :to_html
		end
	end
     end
  end
end
